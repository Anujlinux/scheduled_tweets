<h1>Forgot Your Password?</h1>

<%= form_with url: password_reset_path do |form| %>
 <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: 'test@example.com' %>
  </div>

  <%= form.submit "Submit Password Reset Email", class: 'btn btn-primary' %>
<% end %>